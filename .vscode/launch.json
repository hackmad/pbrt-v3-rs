    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pbr-rust'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pbr-rust",
                    "--package=pbr-rust"
                ],
                "filter": {
                    "name": "pbr-rust",
                    "kind": "bin"
                }
            },
            "args": [
                "./scenes/example.pbrt"
            ],
            "program": "${workspaceFolder}/target/debug/pbr-rust",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'pbr-rust'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=pbr-rust",
                    "--package=pbr-rust"
                ],
                "filter": {
                    "name": "pbr-rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}